// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native"]
}

generator erd {
  provider = "prisma-erd-generator"
  theme    = "dracula"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(cuid())
  name     String
  email    String @unique
  password String

  notes      Note[]
  reminders  Reminder[]
  contacts   Contact[]
  checklists Checklist[]
}

model Note {
  id      String  @id @default(cuid())
  subject String?
  content String
  userId  String

  User User @relation(fields: [userId], references: [id])
}

model Reminder {
  id       String   @id @default(cuid())
  name     String
  note     String?
  remindAt DateTime
  userId   String

  User User @relation(fields: [userId], references: [id])
}

model Contact {
  id     String  @id @default(cuid())
  name   String
  number String
  note   String?
  userId String

  User User @relation(fields: [userId], references: [id])
}

model Checklist {
  id     String @id @default(cuid())
  name   String
  userId String

  items ChecklistItem[]
  User  User            @relation(fields: [userId], references: [id])
}

model ChecklistItem {
  id          String  @id @default(cuid())
  name        String
  checked     Boolean
  checklistId String

  checklist Checklist @relation(fields: [checklistId], references: [id])
}
